{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // Type Checking
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    // Emit
    "sourceMap": true,
    // JavaScript Support
    "allowJs": false,
    // Language and Environment
    "experimentalDecorators": true,
    "lib": ["esnext", "dom"]
  },
  "exclude": ["node_modules", "*.config.js"]
}
